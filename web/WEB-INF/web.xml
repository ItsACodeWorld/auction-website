<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

        <context-param>
            <param-name>db url</param-name>
            <param-value>jdbc:mysql://localhost:3306/Auction-Website</param-value>
        </context-param>

        <context-param>
            <param-name>db driver</param-name>
            <param-value>com.mysql.jdbc.Driver</param-value>
        </context-param>

        <context-param>
            <param-name>db user</param-name>
            <param-value>root</param-value>
        </context-param>

        <context-param>
            <param-name>db pass</param-name>
            <param-value>root</param-value>
        </context-param>


    <listener>
        <listener-class>javauction.model.appInit</listener-class>
    </listener>


        <servlet>
            <servlet-name>register new user</servlet-name>
            <servlet-class>javauction.register</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>register new user</servlet-name>
            <url-pattern>/register.do</url-pattern>
        </servlet-mapping>
    
        <servlet>
            <servlet-name>getAUser</servlet-name>
            <servlet-class>javauction.getAUser</servlet-class>
        </servlet>
    
        <servlet-mapping>
            <servlet-name>getAUser</servlet-name>
            <url-pattern>/getAUser.do</url-pattern>
        </servlet-mapping>
</web-app>